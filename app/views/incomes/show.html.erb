<h1><%= "R#{@income.year} (#{@income.category}) 's outgo (#{@income.district.name} district)" %></h1>
<%= link_to new_income_outgo_path(@income) do %>
    <i class="fa-solid fa-plus"></i>
<% end %>
<br>
<br>
<table>
    <tr>
        <th></th>
        <th>year</th>
        <th>category</th>
        <th>
            price<br>
            (yen)
        </th>
        <th>memo</th>
        <td colspan = "2"></td>
    </tr>
    <tr>
        <td>income</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td><%= @income.year %></td>
        <td><%= @income.category %></td>
        <td class="tdright"><%= @income.price.to_fs(:delimited) %></td>
        <td><%= @income.memo %></td>
        <td>
            <%= link_to edit_income_path(@income) do %>
                <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
        </td>
        <td></td>
    </tr>
    <% if @outgoes.present? %>
        <tr>
            <td>outgo</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    <% end %>
    <% @outgoes.each do |outgo| %>
        <tr>
            <td></td>
            <td><%= outgo.year %></td>
            <td></td>
            <td class="tdright"><%= outgo.price.to_fs(:delimited) %></td>
            <td><%= outgo.memo %></td>
            <td>
                <%= link_to edit_income_outgo_path(@income.id, outgo.id) do %>
                    <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
            </td>
            <td>
                <%= link_to income_outgo_path(@income.id, outgo.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                    <i class="fa-solid fa-trash"></i>
                <% end %>
            </td>
        </tr>        
    <% end %>
    <tr>
        <td>total</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td class="tdright"><%= @total.to_fs(:delimited) %></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
</table>
<br>
<%= link_to district_path(@income.district) do %>
     <i class="fa-solid fa-left-long"></i>
<% end %>