<table class="table table-bordered w-auto text-center">
    <% if districts.present? %>
        <tr>
            <th>地区名</th>
            <th>年度</th>
            <th>事務所名</th>
            <th colspan = "3"></th>
        </tr>
    <% end %>
    <% districts.each do |district| %>
        <tr>
            <td>
                <%= district.name %>
            </td>
            <td>
                R<%= district.year %>
            </td>
            <td>
                <%= district.office %>
            </td>
            <td>
                <%= link_to district_path(district) do %>
                    <i class="fa-solid fa-circle-info"></i>        
                <% end %>
            </td>
            <td>
                <%= link_to edit_district_path(district) do %>
                    <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
            </td>
            <td>
                <%= link_to district_path(district), data:{turbo_method: :delete, turbo_confirm: "本当に削除しますか?"} do %>
                    <i class="fa-solid fa-trash"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
<%= paginate districts, theme: 'bootstrap-5' %>