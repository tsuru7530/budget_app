<h1>district list</h1>
<% if @districts.present? %>
    <%= form_with url: search_path, method: :get do |form| %>
        <%= form.select :category, ["name", "year", "office"] %>
        <%= form.text_field :inputword %>
        <%= button_tag type: "submit" do %>
            <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
    <% end %>
<% end %>
<br>
<%= link_to new_district_path do %>
    <i class="fa-solid fa-plus"></i>
<% end %> <br><br>

<table>
    <% if @districts.present? %>
        <tr>
            <th>district name</th>
            <th>year</th>
            <th>office</th>
            <th colspan = "3"></th>
        </tr>
    <% end %>
    <% @districts.each do |district| %>
        <tr>
            <td>
                <%= district.name %>
            </td>
            <td>
                R<%= district.year %>
            </td>
            <td>
                <%= district.office %>
            </td>
            <td>
                <%= link_to district_path(district) do %>
                    <i class="fa-solid fa-circle-info"></i>        
                <% end %>
            </td>
            <td>
                <%= link_to edit_district_path(district) do %>
                    <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
            </td>
            <td>
                <%= link_to district_path(district), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                    <i class="fa-solid fa-trash"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>