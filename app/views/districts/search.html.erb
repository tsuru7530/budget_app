<h1>district list (search result)</h1>
<table>
    <tr>
        <th>district name</th>
        <th>year</th>
        <th>office</th>
        <th colspan = "3"></th>
    </tr>
    <% @districts.each do |district| %>
        <tr>
            <td>
                <%= district.name %>
            </td>
            <td>
                R<%= district.year %>
            </td>
            <td>
                <%= district.office %>
            </td>
            <td>
                <%= link_to district_path(district) do %>
                    <i class="fa-solid fa-circle-info"></i>        
                <% end %>
            </td>
            <td>
                <%= link_to edit_district_path(district) do %>
                    <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
            </td>
            <td>
                <%= link_to district_path(district), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                    <i class="fa-solid fa-trash"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
<br>
<%= link_to root_path do %>
    <i class="fa-solid fa-left-long"></i>
<% end %>