<h1><%=link_to "#{@district.name} district 's income", edit_district_path(@district) %></h1>
<table>
    <tr>
        <th>year</th>
        <th>category</th>
        <th>memo</th>
        <th></th>
        <th></th>
    </tr>
    <% @incomes.each do |income| %>
        <tr>
            <td><%= "R#{income.year}" %></td>
            <td><%= income.category %></td>
            <td><%= income.memo %></td>
            <td><%= link_to "[detail]", income_path(income) %></td>
            <td><%= link_to "[delete]", income_path(income), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>
